# =============================================================================
# НАСТРОЙКИ ПРИЛОЖЕНИЯ
# =============================================================================

# Название приложения
APP_NAME=User Management System

# Режим отладки (true/false)
DEBUG=false

# Домен приложения
DOMAIN=central.st-ing.com

# Базовый URL API
API_BASE_URL=https://user-management.central.st-ing.com/api

# Хост приложения
APP_HOST=0.0.0.0

# Порт приложения
APP_PORT=8000

# =============================================================================
# НАСТРОЙКИ БАЗЫ ДАННЫХ
# =============================================================================

# URL подключения к базе данных (SQLite/PostgreSQL/MySQL)
DATABASE_URL=sqlite:///./data/users.db

# =============================================================================
# ACTIVE DIRECTORY НАСТРОЙКИ
# =============================================================================

# Домен Active Directory
AD_DOMAIN=central.st-ing.com

# Сервер контроллера домена
#AD_SERVER=host.docker.internal
AD_SERVER=pdc.central.st-ing.com

# Проверка SSL
AD_USE_SSL=false

# Порт LDAP (обычно 389)
LDAP_PORT=389

# Порт LDAP SSL (обычно 636)
LDAP_SSL_PORT=636

# Базовый DN для LDAP поиска
LDAP_BASE_DN=DC=central,DC=st-ing,DC=com

# OU для пользователей
LDAP_USER_OU=OU=Users,DC=central,DC=st-ing,DC=com

# OU для уволенных сотрудников
LDAP_DISMISSED_OU=OU=Уволенные сотрудники,DC=central,DC=st-ing,DC=com

# =============================================================================
# EXCHANGE SERVER НАСТРОЙКИ
# =============================================================================

# Сервер Exchange
EXCHANGE_SERVER=mailzone.central.st-ing.com

# База данных Exchange
EXCHANGE_DATABASE=STI_Mailbox

# =============================================================================
# SMTP НАСТРОЙКИ
# =============================================================================

# SMTP сервер для отправки email
SMTP_SERVER=mailzone.central.st-ing.com

# Порт SMTP сервера
SMTP_PORT=465

# Имя пользователя SMTP
SMTP_USERNAME=nikita.kopyti@central.st-ing.com

# Пароль SMTP
SMTP_PASSWORD=2g6Rhr66

# =============================================================================
# 1C ИНТЕГРАЦИЯ
# =============================================================================

# Endpoint для получения данных от 1C
ONEC_ENDPOINT=/api/oneC/receive

# Разрешенные источники для 1C (через запятую)
ONEC_ALLOWED_ORIGINS=172.17.177.47:3048,localhost:3048,user-management.yourdomain.com,https://user-management.yourdomain.com

# =============================================================================
# CORS НАСТРОЙКИ
# =============================================================================

# Разрешенные источники для CORS (через запятую)
CORS_ORIGINS=http://localhost,http://localhost:3000,https://user-management.yourdomain.com,https://www.user-management.yourdomain.com

# =============================================================================
# ПУТИ К СКРИПТАМ
# =============================================================================

# Путь к директории со скриптами
SCRIPTS_PATH=/app/scripts

# =============================================================================
# НАСТРОЙКИ БЕЗОПАСНОСТИ
# =============================================================================

# Имя пользователя администратора
ADMIN_USERNAME=nikita.kopytin

# Пароль администратора (ИЗМЕНИТЕ В ПРОДАКШЕНЕ!)
ADMIN_PASSWORD=2g6Rhr66

# Дефолный пароль для пользователей
DEFAULT_USER_PASSWORD=User123456

# =============================================================================
# НАСТРОЙКИ ЛОГИРОВАНИЯ
# =============================================================================

# Уровень логирования (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Путь к файлу логов
LOG_FILE=logs/app.log

# Максимальный размер файла логов в МБ
LOG_MAX_SIZE_MB=10

# Максимальное количество файлов логов
LOG_MAX_FILES=5

# =============================================================================
# НАСТРОЙКИ ПАГИНАЦИИ
# =============================================================================

# Размер страницы по умолчанию
DEFAULT_PAGE_SIZE=20

# Максимальный размер страницы
MAX_PAGE_SIZE=100

# =============================================================================
# НАСТРОЙКИ ЭКСПОРТА
# =============================================================================

# Максимальное количество записей для экспорта
EXPORT_MAX_RECORDS=20000

# =============================================================================
# НАСТРОЙКИ ТАЙМАУТОВ И ЛИМИТОВ
# =============================================================================

# Таймаут подключения к LDAP в секундах
LDAP_TIMEOUT=30

# Таймаут подключения к WinRM в секундах
WINRM_TIMEOUT=30

# Таймаут подключения к SMTP в секундах
SMTP_TIMEOUT=30

# Максимальное количество попыток подключения
MAX_RETRY_ATTEMPTS=3

# =============================================================================
# НАСТРОЙКИ ПУТЕЙ И ДИРЕКТОРИЙ
# =============================================================================

# Путь к директории с данными
DATA_DIR=./data

# Путь к директории с логами
LOGS_DIR=./logs

# Путь к директории с временными файлами
TEMP_DIR=./temp

# Путь к директории с экспортируемыми файлами
EXPORT_DIR=./exports

# =============================================================================
# НАСТРОЙКИ WinRM
# =============================================================================

# Настройки WinRM для выполнения PowerShell на Windows сервере
WINRM_SERVER=mailzone.central.st-ing.com
WINRM_PORT=5985
