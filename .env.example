# =============================================================================
# ПРИМЕР НАСТРОЕК ДЛЯ РАЗРАБОТКИ
# Скопируйте этот файл в .env и настройте под ваше окружение
# =============================================================================

# =============================================================================
# НАСТРОЙКИ ПРИЛОЖЕНИЯ
# =============================================================================

# Название приложения
APP_NAME=User Management System

# Режим отладки (true/false)
DEBUG=true

# Домен приложения
DOMAIN=localhost

# Базовый URL API
API_BASE_URL=http://localhost:8000/api

# =============================================================================
# НАСТРОЙКИ БАЗЫ ДАННЫХ
# =============================================================================

# URL подключения к базе данных (SQLite/PostgreSQL/MySQL)
DATABASE_URL=sqlite:///./data/users.db

# =============================================================================
# ACTIVE DIRECTORY НАСТРОЙКИ
# =============================================================================

# Домен Active Directory
AD_DOMAIN=your-domain.com

# Сервер контроллера домена
AD_SERVER=dc.your-domain.com

# Базовый DN для LDAP поиска
LDAP_BASE_DN=DC=your,DC=domain,DC=com

# OU для пользователей
LDAP_USER_OU=OU=Users,DC=your,DC=domain,DC=com

# OU для уволенных сотрудников
LDAP_DISMISSED_OU=OU=Уволенные сотрудники,DC=your,DC=domain,DC=com

# =============================================================================
# EXCHANGE SERVER НАСТРОЙКИ
# =============================================================================

# Сервер Exchange
EXCHANGE_SERVER=mail.your-domain.com

# База данных Exchange
EXCHANGE_DATABASE=YourMailbox

# =============================================================================
# SMTP НАСТРОЙКИ
# =============================================================================

# SMTP сервер для отправки email
SMTP_SERVER=mail.your-domain.com

# Порт SMTP сервера
SMTP_PORT=465

# Имя пользователя SMTP
SMTP_USERNAME=admin@your-domain.com

# Пароль SMTP
SMTP_PASSWORD=your-smtp-password

# =============================================================================
# 1C ИНТЕГРАЦИЯ
# =============================================================================

# Endpoint для получения данных от 1C
ONEC_ENDPOINT=/api/oneC/receive

# Разрешенные источники для 1C (через запятую)
ONEC_ALLOWED_ORIGINS=localhost:3048,127.0.0.1:3048,localhost,http://localhost

# =============================================================================
# CORS НАСТРОЙКИ
# =============================================================================

# Разрешенные источники для CORS (через запятую)
CORS_ORIGINS=http://localhost,http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# ПУТИ К СКРИПТАМ
# =============================================================================

# Путь к директории со скриптами
SCRIPTS_PATH=./scripts

# =============================================================================
# НАСТРОЙКИ БЕЗОПАСНОСТИ
# =============================================================================

# Имя пользователя администратора
ADMIN_USERNAME=admin

# Пароль администратора (ИЗМЕНИТЕ В ПРОДАКШЕНЕ!)
ADMIN_PASSWORD=admin123

DEFAULT_USER_PASSWORD=User123456

# =============================================================================
# НАСТРОЙКИ ЛОГИРОВАНИЯ
# =============================================================================

# Уровень логирования (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=DEBUG

# Путь к файлу логов
LOG_FILE=logs/app.log

# =============================================================================
# НАСТРОЙКИ ПАГИНАЦИИ
# =============================================================================

# Размер страницы по умолчанию
DEFAULT_PAGE_SIZE=20

# Максимальный размер страницы
MAX_PAGE_SIZE=100

# =============================================================================
# НАСТРОЙКИ ЭКСПОРТА
# =============================================================================

# Максимальное количество записей для экспорта
EXPORT_MAX_RECORDS=10000
